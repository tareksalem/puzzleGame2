<link rel="stylesheet" href="../css/login.css"/>
<div class="container">
    <div class="col-lg-6 col-md-6 col-sm-8 col-xs-10 col-center">
        <form action="/cpanel/login" method="post" class="form-login">
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                {{#if error}}
                    <div class="alert alert-danger">{{error}}</div>
                {{/if}}
            </div>
            <div class="form-group">
                <label>الايميل</label>
                <input type="email" name="email" class="form-control"/>
            </div>
            <div class="form-group">
                <label>كلمة المرور</label>
                <input type="password" name="password" class="form-control"/>
            </div>
            <div class="form-group">

                <div class="col-center col-lg-4 col-md-4 col-sm-4 col-xs-4">
                    <input value="تسجيل الدخول" type="submit" class="btn btn-primary"/>
                </div>
            </div>
        </form>
    </div>
</div>